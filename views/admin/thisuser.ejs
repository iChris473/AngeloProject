
<%- include('partials/adminheader.ejs') %>


<body class="relative">
    <!-- Nav Section -->

    <%- include('partials/adminnav.ejs') %>

    <div class=" overflow-x-hidden grid grid-cols-4">

        <!-- SideBar -->
        <%- include('partials/adminside.ejs') %>

        <!-- Main Section -->
        <section class="col-span-4 md:col-span-3 mt-24 relative">
            <div>
                <h1 class="text-center text-xl font-semibold my-5">USER INFO</h1>
                <div class="w-[95%] mx-auto p-4 border rounded-md border-gray-200 shadow-md">
                    <h1 class="bg-green-500 opacity-80 p-2 text-white rounded-sm m-4 font-bold success text-center hidden">
                        Work was succesffuly updated
                      </h1>
                      <h1 class="bg-red-500 p-2 text-white rounded-sm m-4 font-bold text-center error hidden">
                        An error occured
                      </h1>
                    <div class="flex flex-col gap-5 max-w-[900px] space-x-5">
                        <!-- Main Form -->
                        <div class="col-span-3 space-y-5 py-5 mb-10 form">
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Full Name
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 name"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Phone Number
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 phone"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Email
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 email"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Account Number
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 accNumber"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Account Name
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 accName"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Bank Name
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 bankName"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Package Type
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 package"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Referrals Withdwrawn
                              </p>
                              <p class="amountWith border-b outline-none w-full border-gray-400 package"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Trading Withdwrawn
                              </p>
                              <p class="tradedWith border-b outline-none w-full border-gray-400 package"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Requested Referral with
                              </p>
                              <p class="border-b outline-none w-full border-gray-400 reqRefWith"
                              ></p>
                            </div>
                            <div class="space-y-2">
                              <p class="text-md font-bold text-gray-500 tracking-wider">
                                Requested Traded with
                              </p>
                              <p class="reqTradeWith border-b outline-none w-full border-gray-400 package"
                              ></p>
                            </div>
                        </div>
                        <!-- Buttons -->
                        <div class="hidden withDiv">
                          <h1 class="text-center font-bold text-gray-800 text-lg">Referral Bonus Sent</h1>
                          <form class="withForm w-full flex items-end justify-end flex-col gap-5 mb-10 pr-10">
                            <input type="number" class="w-full max-w-[300px] p-2 bg-transparent outline-none border-b border-gray-400 pb-2 amountGiven" placeholder="enter referred amount withdrawn">
                            <button class="approveBtn bg-green-500 p-2 text-white text-lg font-bold rounded-md">Approve Withdrawal</button>
                          </form>
                        </div>
                        <div class="hidden tradedWithDiv">
                          <h1 class="text-center font-bold text-gray-800 text-lg">Traded Amount Sent</h1>
                          <form class="tradeForm w-full flex items-end justify-end flex-col gap-5 mb-10 pr-10">
                            <input type="number" class="w-full max-w-[300px] p-2 bg-transparent outline-none border-b border-gray-400 pb-2 tradeAmountGiven" placeholder="enter traded amount withdrawn">
                            <button class="withTradeBtn bg-green-500 p-2 text-white text-lg font-bold rounded-md">Approve Withdrawal</button>
                          </form>
                        </div>
                    </div> 
              </div>
        </section>
    </div>


    <script>

        const admin = JSON.parse(localStorage.getItem("admin"))
        if(!admin){
            window.location.href = "/admin/login" 
        }
        const logout= document.querySelector(".logout")
        logout.addEventListener("click", () => {
            localStorage.setItem("admin", null)
            window.location.href = "/admin/login"
        })

        const sidebar = document.querySelector(".sidebar")
        const menu = document.querySelector(".menu")
        const cancel = document.querySelector(".cancel")

        menu.addEventListener("click", () => {
            cancel.classList.remove("hidden")
            menu.classList.add("hidden")
            sidebar.classList.remove("hidden")
            sidebar.classList.add("absolute")
        })
        cancel.addEventListener("click", () => {
            cancel.classList.add("hidden")
            menu.classList.remove("hidden")
            sidebar.classList.add("hidden")
            sidebar.classList.remove("absolute")
        })

    </script>
<script type="module" src="/public/admin/thisUser.js"></script>
</body>
</html>