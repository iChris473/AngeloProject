                <a href="login" class="text-gray-500 text-xl border-b border-gray-800 pb-2 w-full loginBtn">Login</a>
                <a href="register"><button class="dlbtn p-2 rounded-full px-7 regBtn">Register</button></a>
                <a href="dashboard"><button class="dlbtn p-2 rounded-full px-7 dashBtn hidden">Dashboard</button></a>
            </div>
        </nav>
    </div>
    <!-- On Desktop -->
    <div class="hidden md:block  w-full shadow-md border-b border-gray-800">
        <nav class="p-5 flex items-center justify-between max-w-[1200px] mx-auto">
            <div class="flex items-center justify-center gap-5">
                <a href="/">
                    <img src="/public/img/newLogo.png" class="h-10" alt="">
                </a>
                <a href="/" class="text-gray-500 text-xl">Home</a>
                <a href="https://nairacity.herokuapp.com/#about" class="text-gray-500 text-xl">About</a>
                <a href="https://nairacity.herokuapp.com/#howitworks" class="text-gray-500 text-xl">How it works</a>
                <a href="login" class="text-gray-500 text-xl loginBtn2">Login</a>
            </div>
            <div>
                <a href="register"><button class="dlbtn p-4 rounded-full px-7 regBtn2">Register</button></a>
                <a href="dashboard"><button class="dlbtn p-4 rounded-full px-7 hidden dashBtn2">Dashboard</button></a>
            </div>
        </nav>
    </div>

    <script>

        const xIcon = document.querySelector(".xIcon");
        const altIcon = document.querySelector(".altIcon");
        const menuDiv = document.querySelector(".menuDiv");
        const regBtn = document.querySelector(".regBtn");
        const regBtn2 = document.querySelector(".regBtn2");
        const dashBtn = document.querySelector(".dashBtn");
        const dashBtn2 = document.querySelector(".dashBtn2");
        const loginBtn = document.querySelector(".loginBtn");
        const loginBtn2 = document.querySelector(".loginBtn2");

        xIcon.addEventListener("click", () => {
            menuDiv.classList.add("hidden");
            xIcon.classList.add("hidden");
            altIcon.classList.remove("hidden");
        });

        altIcon.addEventListener("click", () => {
            menuDiv.classList.remove("hidden");
            xIcon.classList.remove("hidden");
            altIcon.classList.add("hidden");
        });


        if(user && (user != "null")){
            loginBtn.classList.add("hidden");
            loginBtn2.classList.add("hidden");
            regBtn.classList.add("hidden");
            regBtn2.classList.add("hidden");
            dashBtn.classList.remove("hidden");
            dashBtn2.classList.remove("hidden");
        }



    </script>
    
