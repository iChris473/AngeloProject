


<section class="z-50 fixed w-full opacity-100 bg-[#141414]">
    <script>
        const user = JSON.parse(localStorage.getItem("user"));

        if (user && (window.location.href.includes('register'))) {
            window.location.href = '/dashboard'
        }
    </script>
    <!-- On Mobile -->
    <div class="md:hidden w-full shadow-md border-b border-gray-800">
        <nav class="p-5 flex relative items-center justify-between max-w-[1200px] mx-auto">
            <a href="/">
                <img src="/public/img/newLogo.png" class="h-10 max-w-[300px] absolute md:relative top-3" alt="">
            </a>
            <div class="altIcon">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white cursor pointer" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd" />
