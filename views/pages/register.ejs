
  <%- include('partials/header.ejs') %>

  <body>
      
      <!-- NAV SECTION -->
      <%- include('partials/navbar.ejs') %>
  
      <!-- Register Section -->
        <section class="pt-28 flex items-center justify-center">
            <div class="mb-20 p-5">
                <h1 id="error" class="text-center text-4xl text-green-500 ultra my-10">Join Naira Citizens</h1>
                <form class="form space-y-5">
                    <h1 class="text-center text-lg hidden font-bold text-red-500 mt-10 mismatch">Passwords does not match</h1>
                    <h1 class="text-center text-lg hidden font-bold text-red-500 mt-10 apiError"></h1>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="email" class="font-semibold text-lg text-gray-200">E-mail</label>
                        <input required type="email" name="email" placeholder="Enter a Valid Email" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent email">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="fullName" class="font-semibold text-lg text-gray-200">Full Name</label>
                        <input required type="text" name="fullName" placeholder="Enter your Full Name" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent fullName">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="fullName" class="font-semibold text-lg text-gray-200">Username</label>
                        <input required type="text" name="fullName" placeholder="Enter a unique username" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent username">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="fullName" class="font-semibold text-lg text-gray-200">Mobile Number</label>
                        <input required type="text" name="fullName" placeholder="Enter your Mobile Number" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent number">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="newPassword" class="font-semibold text-lg text-gray-200">Password</label>
                        <input required type="password" name="newPassword" placeholder="Create a new password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent password">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="confirmPassword" class="font-semibold text-lg text-gray-200">Confirm Password</label>
                        <input required type="password" name="confirmPassword" placeholder="Confirm password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent confirmPassword">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="referrer" class="font-semibold text-lg text-gray-200">Referrer Username (Optional)</label>
                        <input type="text" name="referrer" placeholder="Referrer Username" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent referr">
                    </div>
                    <p class="text-gray-500 text-xs text-center">By registering you agree to the NairaCity <a href="/terms">terms and services </a> </p>
                    <button type="submit" class="greenBtn shadow-md shadow-green-700 p-4 rounded-md px-10 font-bold text-lg tracking-wide my-5 block mx-auto submit">Register</button>
                </form>
                <p class="text-gray-200 mt-10 text-md text-center opacity-70">Already a Member? <a href="login" class="text-green-500 border-b border-green-500">Login</a></p>
            </div>
        </section>
  
      <!-- <%- include('partials/footer.ejs') %> -->
      <!-- Javascript codes and links -->
       <script src="/public/js/baseUrl.js"></script>  
       <script src="/public/js/register.js"></script>  
    </body>
  </html>