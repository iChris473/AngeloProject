<%- include('partials/header.ejs') %>

    <body class="relative" style="background-color: #252525;">
        <!-- Nav Section -->
        <%- include('partials/dashnav.ejs') %>

            <div class=" overflow-x-hidden grid grid-cols-4">
                <!-- SideBar -->
                <%- include('partials/dashside.ejs') %>
    
            <!-- Main Section -->
            <section class="col-span-4 md:col-span-3 mt-16">
                <div class="mt-10 m-5 min-h-screen">
                    <h1 class="ultra text-4xl text-center mt-12 text-green-500">My Profile</h1>
                    <div class="w-full flex items-center justify-center my-10">
                        <form class=" flex flex-col items-center justify-center gap-5 w-[97%] max-w-[700px] mx-auto">
                            <div class="flex flex-col gap-1 items-start justify-center w-full">
                                <label for="email" class="font-semibold text-lg text-gray-200">E-mail</label>
                                <input required type="email" name="email" placeholder="Enter a Valid Email" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent">
                            </div>
                            <div class="flex flex-col gap-1 items-start justify-center w-full">
                                <label for="fullName" class="font-semibold text-lg text-gray-200">Full Name</label>
                                <input required type="text" name="fullName" placeholder="Enter your Full Name" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent">
                            </div>
                            <div class="flex flex-col gap-1 items-start justify-center w-full">
                                <label for="fullName" class="font-semibold text-lg text-gray-200">Mobile Number</label>
                                <input required type="text" name="fullName" placeholder="Enter your Mobile Number" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent">
                            </div>
                            <div class="flex flex-col gap-1 items-start justify-center w-full">
                                <label for="newPassword" class="font-semibold text-lg text-gray-200">Password</label>
                                <input required type="password" name="newPassword" placeholder="Create a new password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent">
                            </div>
                            <div class="flex flex-col gap-1 items-start justify-center w-full">
                                <label for="confirmPassword" class="font-semibold text-lg text-gray-200">Confirm Password</label>
                                <input required type="password" name="confirmPassword" placeholder="Confirm password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent">
                            </div>
                            <button class="greenBtn shadow-md shadow-green-700 p-4 rounded-md px-10 font-bold text-lg tracking-wide my-5 block mx-auto">Update</button>
                        </form>
                    </div>
                </div>
                <!-- Footer -->
                <footer class="flex items-center justify-between w-full bg-black bg-opacity-30 p-7">
                    <p class="text-gray-200 text-sm">2022 &copy NairaCity</p>
                    <p class="text-gray-200 text-sm">Designed & Developed by NairaCity Technologies Ltd</p>
                </footer>
            </section>
        </div>

        <!-- Javascript codes and links -->

        <script src="/public/admin/admin.js"></script>
    </body>
    </html>