

  <%- include('partials/header.ejs') %>

  <body>
      
      <!-- NAV SECTION -->
      <%- include('partials/navbar.ejs') %>
  
      <!-- Register Section -->
        <section class="pt-28 flex items-center justify-center">
            <div class="mb-20 p-5">
                <h1 id="error" class="text-center text-4xl text-green-500 ultra my-10">Reset Password</h1>
                <form class="form space-y-5">
                    <h1 class="text-center text-lg hidden font-bold text-red-500 mt-10 apiError"></h1>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="new" class="font-semibold text-lg text-gray-200">New Password</label>
                        <input required type="password" name="new" placeholder="Create new Password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent newPass">
                    </div>
                    <div class="flex flex-col gap-1 items-start justify-center">
                        <label for="new" class="font-semibold text-lg text-gray-200">Confirm Password</label>
                        <input required type="password" name="new" placeholder="Confirm Password" class="outline-none rounded-md w-[95%] max-w-[600px] p-2 border border-green-700 bg-transparent confirmPass">
                    </div>
                    <button type="submit" class="greenBtn shadow-md shadow-green-700 p-4 rounded-md px-10 font-bold text-lg tracking-wide my-5 block mx-auto submit">Submit</button>
                </form>
            </div>
        </section>
  
      <!-- <%- include('partials/footer.ejs') %> -->
      <!-- Javascript codes and links -->
      <script src="/public/js/baseUrl.js"></script>  
      <script src="/public/js/updatePass.js"></script>  
  </body>
  </html>